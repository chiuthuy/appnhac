<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/txtdanhsachindex"
            android:textSize="20sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txttenbaihat"
            android:text="Ten ca khuc"
            android:textSize="20sp"
            android:textColor="#030303"
            android:layout_toRightOf="@+id/txtdanhsachindex"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:ellipsize="end"/>
        <TextView
            android:layout_below="@+id/txttenbaihat"
            android:id="@+id/txttencasi"
            android:text="Ten ca si"
            android:textSize="20sp"
            android:textColor="#979797"
            android:layout_toRightOf="@+id/txtdanhsachindex"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:ellipsize="end"/>
        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imgluotthichdanhsachbaihat"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>