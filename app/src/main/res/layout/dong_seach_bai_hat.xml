<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgsearchbaihat"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/txtsearchtenbaihat"
        android:textSize="18sp"
        android:textColor="#0a0a0a"
        android:text="Ten bai hat"
        android:layout_toRightOf="@+id/imgsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtsearchcasi"
        android:textSize="18sp"
        android:textColor="#7A7878"
        android:text="Ten ca sit"
        android:layout_below="@+id/txtsearchtenbaihat"
        android:layout_toRightOf="@+id/imgsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imgsearchluotthich"
        android:layout_width="30dp"
        android:layout_height="30dp"/>


</RelativeLayout>